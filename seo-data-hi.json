{
  "seo_templates": [
    {
      "keywords": ["कहानी", "नीतिकथा", "बाल कहानी", "सोने से पहले की कहानी"],
      "templates": {
        "title": {
          "shorts": "{character} और {object}: एक {adjective} कहानी",
          "long": "{character} की {adjective} कहानी | पूर्ण एनिमेटेड कहानी"
        },
        "description": {
          "shorts": "{character} के बारे में यह {adjective} कहानी देखें जो {moral} सीखती है। बच्चों के लिए बढ़िया! #छोटीकहानी #{character}",
          "long": "{character} की {adjective} एनिमेटेड कहानी का आनंद लें और {moral} की खोज में उनकी यात्रा के बारे में जानें। {audience} के लिए बढ़िया। {call_to_action} करना न भूलें।"
        },
        "tags": ["{character}", "कहानी", "{adjective}", "{moral}", "{audience}", "एनिमेटेड", "बच्चे"],
        "variables": {
          "character": ["शेर", "खरगोश", "कछुआ", "हाथी", "बंदर"],
          "object": ["जादुई पत्थर", "सुनहरा मुकुट", "रहस्यमय बक्सा"],
          "adjective": ["दिल छू लेने वाली", "मजेदार", "शिक्षाप्रद", "प्रेरणादायक"],
          "moral": ["दोस्ती", "ईमानदारी", "दृढ़ता", "दयालुता"],
          "audience": ["बच्चे", "परिवार", "सभी उम्र"],
          "call_to_action": ["सब्सक्राइब करें", "वीडियो को लाइक करें", "दोस्तों के साथ शेयर करें"]
        }
      }
    },
    {
      "keywords": ["टेक रिव्यू", "गैजेट", "स्मार्टफोन", "अनबॉक्सिंग"],
      "templates": {
        "title": {
          "shorts": "{product} अनबॉक्सिंग - पहली झलक!",
          "long": "{product} पूरी समीक्षा - {year} में इसकी कीमत?"
        },
        "description": {
          "shorts": "नए {product} की एक झलक! #{product} #टेक",
          "long": "{testing_period} के बाद {product} की गहन समीक्षा। हम {feature_1} और {feature_2} का परीक्षण करते हैं। अधिक टेक समीक्षाओं के लिए {call_to_action}!"
        },
        "tags": ["{product}", "टेक रिव्यू", "अनबॉक्सिंग", "{brand}", "{year}", "स्मार्टफोन"],
        "variables": {
          "product": ["आईफोन 16", "सैमसंग गैलेक्सी एस25", "गूगल पिक्सेल 9"],
          "brand": ["एप्पल", "सैमसंग", "गूगल"],
          "year": ["2024", "2025"],
          "testing_period": ["1 सप्ताह", "1 महीना", "3 महीने"],
          "feature_1": ["कैमरा", "बैटरी लाइफ", "प्रदर्शन"],
          "feature_2": ["डिस्प्ले", "सॉफ्टवेयर", "डिज़ाइन"],
          "call_to_action": ["सब्सक्राइब करें", "घंटी आइकन दबाएं"]
        }
      }
    }
  ],
  "fallback": {
    "title": "{topic} - अद्भुत {video_type} जो आपको पसंद आएगी!",
    "description": "{topic} के बारे में यह {video_type} आपको {impact} देगी। {benefit} के लिए अंत तक देखें!",
    "tags": ["{topic}", "{video_type}", "वायरल", "ट्रेंडिंग"],
    "variables": {
      "video_type": ["वीडियो", "गाइड", "ट्यूटोरियल"],
      "impact": ["आपको हैरान कर देगी", "आपकी जिंदगी बदल देगी", "आपको प्रेरित करेगी"],
      "benefit": ["एक सरप्राइज", "विशेष टिप्स", "एक मुफ्त उपहार"]
    }
  }
}
