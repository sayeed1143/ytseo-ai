{
  "seo_templates": [
    {
      "keywords": ["история", "сказка", "басня", "моральная история", "детская история", "история перед сном"],
      "templates": {
        "title": {
          "shorts": "{character} и {object}: {adjective} история",
          "long": "{adjective} история о {character} | Полная анимационная версия"
        },
        "description": {
          "shorts": "Посмотрите эту {adjective} историю о {character}, который учится {moral}. Идеально для детей! #КороткаяИстория #{character}",
          "long": "Насладитесь этой {adjective} анимационной историей о {character} и его путешествии к познанию {moral}. Отлично подходит для {audience}. Не забудьте {call_to_action}."
        },
        "tags": ["{character}", "история", "{adjective}", "{moral}", "{audience}", "анимация", "дети"],
        "variables": {
          "character": ["Лев", "Кролик", "Черепаха", "Слон", "Обезьяна"],
          "object": ["Волшебный камень", "Золотая корона", "Таинственная коробка"],
          "adjective": ["трогательная", "смешная", "поучительная", "вдохновляющая"],
          "moral": ["дружбе", "честности", "настойчивости", "доброте"],
          "audience": ["детей", "семей", "всех возрастов"],
          "call_to_action": ["подписаться", "поставить лайк", "поделиться с друзьями"]
        }
      }
    },
    {
      "keywords": ["обзор техники", "гаджет", "смартфон", "распаковка"],
      "templates": {
        "title": {
          "shorts": "Распаковка {product} - Первый взгляд!",
          "long": "Полный обзор {product} - Стоит ли покупать в {year}?"
        },
        "description": {
          "shorts": "Быстрый взгляд на новый {product}! #{product} #Техника",
          "long": "Подробный обзор {product} после {testing_period}. Мы тестируем {feature_1} и {feature_2}. {call_to_action} для большего количества обзоров!"
        },
        "tags": ["{product}", "обзор", "распаковка", "{brand}", "{year}", "смартфон"],
        "variables": {
          "product": ["iPhone 16", "Samsung Galaxy S25", "Google Pixel 9"],
          "brand": ["Apple", "Samsung", "Google"],
          "year": ["2024", "2025"],
          "testing_period": ["1 недели", "1 месяца", "3 месяцев"],
          "feature_1": ["камеру", "автономность", "производительность"],
          "feature_2": ["дисплей", "софт", "дизайн"],
          "call_to_action": ["Подпишитесь", "Нажмите на колокольчик"]
        }
      }
    },
    {
      "keywords": ["советы по учебе", "обучение", "образование"],
      "templates": {
        "title": {
          "shorts": "{number} рабочих советов по учебе!",
          "long": "Как эффективно изучать {subject} - Полное руководство"
        },
        "description": {
          "shorts": "Попробуйте эти {number} советов сегодня! #СоветыПоУчебе #{subject}",
          "long": "Узнайте лучшие методы изучения {subject}. Включает {method_1} и {method_2}. Идеально для {audience}. {call_to_action} для большего количества советов!"
        },
        "tags": ["советы", "{subject}", "образование", "обучение", "студенты"],
        "variables": {
          "number": ["3", "5", "7"],
          "subject": ["Математику", "Науки", "Историю", "Языки"],
          "method_1": ["активное вспоминание", "интервальное повторение", "ментальные карты"],
          "method_2": ["метод помидора", "метод Фейнмана", "чередование"],
          "audience": ["студентов", "профессионалов", "всех, кто учится"],
          "call_to_action": ["Подпишитесь", "Сохраните это видео"]
        }
      }
    },
    {
      "keywords": ["фитнес", "тренировка", "упражнения"],
      "templates": {
        "title": {
          "shorts": "{number}-минутная тренировка для {body_part}",
          "long": "Полная программа тренировок для {body_part} ({result})"
        },
        "description": {
          "shorts": "Быстрая тренировка для {body_part}, которую можно делать где угодно! #{body_part}Тренировка",
          "long": "Следуйте этой {duration} тренировке для {body_part}, чтобы достичь {result}. Включает {exercise_1} и {exercise_2}. {call_to_action} для большего контента!"
        },
        "tags": ["фитнес", "{body_part}", "тренировка", "упражнения", "{result}"],
        "variables": {
          "number": ["5", "10", "15"],
          "body_part": ["пресса", "рук", "ног", "всего тела"],
          "result": ["рельефа", "силы", "похудения"],
          "duration": ["10-минутную", "30-минутную", "1-часовую"],
          "exercise_1": ["отжимания", "приседания", "планку"],
          "exercise_2": ["выпады", "берпи", "прыжки"],
          "call_to_action": ["Подпишитесь", "Сохраните программу"]
        }
      }
    },
    {
      "keywords": ["готовка", "рецепт", "еда"],
      "templates": {
        "title": {
          "shorts": "Как приготовить {dish} за {time}!",
          "long": "Идеальный рецепт {dish} в стиле {cuisine}"
        },
        "description": {
          "shorts": "Простой рецепт {dish}, который сможет повторить каждый! #{dish} #{cuisine}",
          "long": "Научитесь готовить аутентичное {cuisine} {dish} с этим пошаговым руководством. Использует {ingredient_1} и {ingredient_2}. {call_to_action} для большего количества рецептов!"
        },
        "tags": ["{dish}", "рецепт", "готовка", "{cuisine}", "еда"],
        "variables": {
          "dish": ["Пасту", "Карри", "Жаркое", "Салат"],
          "time": ["5 минут", "15 минут", "30 минут"],
          "cuisine": ["Итальянской", "Индийской", "Китайской", "Мексиканской"],
          "ingredient_1": ["свежие травы", "специальные специи", "секретный соус"],
          "ingredient_2": ["местные овощи", "премиум белок", "домашний бульон"],
          "call_to_action": ["Подпишитесь", "Попробуйте рецепт"]
        }
      }
    }
  ],
  "fallback": {
    "title": "{topic} - Удивительное {video_type}, которое вам понравится!",
    "description": "Это {video_type} о {topic} вас {impact}. Досмотрите до конца ради {benefit}!",
    "tags": ["{topic}", "{video_type}", "вирусное", "популярное"],
    "variables": {
      "video_type": ["видео", "руководство", "обучение"],
      "impact": ["удивит", "изменит вашу жизнь", "вдохновит"],
      "benefit": ["сюрприза", "эксклюзивных советов", "подарка"]
    }
  }
}
