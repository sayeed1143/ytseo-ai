{
  "seo_templates": [
    {
      "keywords": ["story", "tale", "fable", "moral story", "children story", "bedtime story"],
      "templates": {
        "title": {
          "shorts": "{character} and the {object}: A {adjective} Story",
          "long": "The {adjective} Tale of {character} | Full Animated Story"
        },
        "description": {
          "shorts": "Watch this {adjective} story about {character} learning {moral}. Perfect for kids! #ShortStory #{character}",
          "long": "Enjoy this complete {adjective} animated story about {character} and their journey to discover {moral}. Great for {audience}. Don't forget to {call_to_action}."
        },
        "tags": ["{character}", "story", "{adjective}", "{moral}", "{audience}", "animated", "kids"],
        "variables": {
          "character": ["Lion", "Rabbit", "Turtle", "Elephant", "Monkey"],
          "object": ["Magic Stone", "Golden Crown", "Mysterious Box"],
          "adjective": ["heartwarming", "funny", "educational", "inspiring"],
          "moral": ["friendship", "honesty", "perseverance", "kindness"],
          "audience": ["children", "families", "all ages"],
          "call_to_action": ["subscribe", "like the video", "share with friends"]
        }
      }
    },
    {
      "keywords": ["tech review", "gadget", "smartphone", "unboxing"],
      "templates": {
        "title": {
          "shorts": "{product} Unboxing - First Look!",
          "long": "{product} Full Review - Worth It in {year}?"
        },
        "description": {
          "shorts": "Quick look at the new {product}! #{product} #Tech",
          "long": "In-depth review of {product} after {testing_period}. We test {feature_1} and {feature_2}. {call_to_action} for more tech reviews!"
        },
        "tags": ["{product}", "tech review", "unboxing", "{brand}", "{year}", "smartphone"],
        "variables": {
          "product": ["iPhone 16", "Samsung Galaxy S25", "Google Pixel 9"],
          "brand": ["Apple", "Samsung", "Google"],
          "year": ["2024", "2025"],
          "testing_period": ["1 week", "1 month", "3 months"],
          "feature_1": ["camera", "battery life", "performance"],
          "feature_2": ["display", "software", "design"],
          "call_to_action": ["Subscribe", "Hit the bell icon"]
        }
      }
    },
    {
      "keywords": ["study tips", "learning", "education"],
      "templates": {
        "title": {
          "shorts": "{number} Study Hacks That Actually Work!",
          "long": "How to Study {subject} Effectively - Complete Guide"
        },
        "description": {
          "shorts": "Try these {number} study hacks today! #StudyTips #{subject}",
          "long": "Learn the best methods to study {subject} effectively. Includes {method_1} and {method_2}. Perfect for {audience}. {call_to_action} for more tips!"
        },
        "tags": ["study tips", "{subject}", "education", "learning", "students"],
        "variables": {
          "number": ["3", "5", "7"],
          "subject": ["Math", "Science", "History", "Languages"],
          "method_1": ["active recall", "spaced repetition", "mind mapping"],
          "method_2": ["pomodoro technique", "Feynman method", "interleaving"],
          "audience": ["students", "professionals", "lifelong learners"],
          "call_to_action": ["Subscribe", "Bookmark this video"]
        }
      }
    },
    {
      "keywords": ["fitness", "workout", "exercise"],
      "templates": {
        "title": {
          "shorts": "{number}-Minute {body_part} Workout",
          "long": "Complete {body_part} Workout Routine for {result}"
        },
        "description": {
          "shorts": "Quick {body_part} workout you can do anywhere! #{body_part}Workout",
          "long": "Follow this {duration} {body_part} workout to achieve {result}. Includes {exercise_1} and {exercise_2}. {call_to_action} for more fitness content!"
        },
        "tags": ["fitness", "{body_part}", "workout", "exercise", "{result}"],
        "variables": {
          "number": ["5", "10", "15"],
          "body_part": ["Abs", "Arms", "Legs", "Full Body"],
          "result": ["toning", "strength", "weight loss"],
          "duration": ["10-minute", "30-minute", "1-hour"],
          "exercise_1": ["push-ups", "squats", "planks"],
          "exercise_2": ["lunges", "burpees", "jumping jacks"],
          "call_to_action": ["Subscribe", "Save this routine"]
        }
      }
    },
    {
      "keywords": ["cooking", "recipe", "food"],
      "templates": {
        "title": {
          "shorts": "How to Make {dish} in {time}!",
          "long": "The Perfect {dish} Recipe - {cuisine} Style"
        },
        "description": {
          "shorts": "Easy {dish} recipe anyone can make! #{dish} #{cuisine}",
          "long": "Learn to make authentic {cuisine} {dish} with this step-by-step guide. Uses {ingredient_1} and {ingredient_2}. {call_to_action} for more recipes!"
        },
        "tags": ["{dish}", "recipe", "cooking", "{cuisine}", "food"],
        "variables": {
          "dish": ["Pasta", "Curry", "Stir Fry", "Salad"],
          "time": ["5 minutes", "15 minutes", "30 minutes"],
          "cuisine": ["Italian", "Indian", "Chinese", "Mexican"],
          "ingredient_1": ["fresh herbs", "special spices", "secret sauce"],
          "ingredient_2": ["local vegetables", "premium protein", "homemade stock"],
          "call_to_action": ["Subscribe", "Try this recipe"]
        }
      }
    }
  ],
  "fallback": {
    "title": "{topic} - Amazing {video_type} You'll Love!",
    "description": "This {video_type} about {topic} will {impact}. Watch till the end for {benefit}!",
    "tags": ["{topic}", "{video_type}", "viral", "trending"],
    "variables": {
      "video_type": ["video", "guide", "tutorial"],
      "impact": ["blow your mind", "change your life", "inspire you"],
      "benefit": ["a surprise", "exclusive tips", "a free gift"]
    }
  }
}
